<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_messenger"
    android:background="@color/colorToolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:background="@drawable/welivre"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="20dp" />


        <android.support.v7.widget.AppCompatImageView
            android:layout_toLeftOf="@+id/toolbar_messenger_more"
            android:id="@+id/toolbar_messenger_search"
            android:layout_centerVertical="true"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_search_white"
            android:layout_width="34dp"
            android:layout_height="34dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/toolbar_messenger_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_more_vert_white"
            android:padding="5dp"
            android:layout_width="34dp"
            android:layout_height="34dp" />



    </RelativeLayout>


</android.support.v7.widget.Toolbar>