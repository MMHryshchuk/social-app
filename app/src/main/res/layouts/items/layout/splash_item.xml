<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/splash_item_img"
        android:layout_margin="@dimen/splash_activity_image_margin"
        android:layout_width="@dimen/splash_activity_image_size"
        android:layout_height="@dimen/splash_activity_image_size" />

    <TextView
        android:layout_marginTop="@dimen/splash_activity_margin_top"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/splash_item_title"
        android:textColor="@color/colorPrimaryWhite"
        style="@style/PrimaryText"
        android:gravity="center"
        android:layout_below="@+id/splash_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/splash_item_description"
        android:gravity="center"
        android:textColor="@color/colorSplashText"
        android:layout_marginTop="@dimen/splash_activity_margin_top_text"
        android:layout_below="@+id/splash_item_title"
        style="@style/SecondaryText"
        android:paddingLeft="@dimen/splash_activity_text_padding_left_right"
        android:paddingRight="@dimen/splash_activity_text_padding_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>