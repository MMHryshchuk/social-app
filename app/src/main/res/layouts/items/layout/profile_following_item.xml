<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <com.clearsoft.welivre.ui.wigets.RoundedImageView
            android:background="@drawable/default_contact"
            android:layout_centerVertical="true"
            android:id="@+id/profile_following_item_image"
            android:layout_width="@dimen/activity_messenger_image_size"
            android:layout_height="@dimen/activity_messenger_image_size"
            android:layout_marginLeft="@dimen/activity_messenger_margin"
            android:layout_marginRight="@dimen/activity_messenger_margin" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/profile_following_item_image"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingRight="100dp"
                    android:id="@+id/profile_following_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aaron Armstrong"
                    android:textColor="@color/colorPrimaryBlack"
                    android:textSize="15sp" />



            </RelativeLayout>

            <TextView
                android:maxLines="2"
                android:id="@+id/profile_following_item_followers_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="423 friends"
                android:textColor="@color/colorTextSecondary"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/profile_following_item_follow_btn"
            android:layout_marginRight="@dimen/contact_item_margin_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="10sp"
            android:background="@drawable/round_stroke_btn_black"
            android:textColor="@color/colorPrimaryBlack"
            android:text="UNFOLLOW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

