<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/p_motivation_view"/>
    <ScrollView
        android:layout_below="@+id/p_motivation_view"
        android:id="@+id/plan_person_motivation_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:animateLayoutChanges="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false"
                        app:contentPadding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:text="Define Your Personal Motivation!"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This special motivation will strengthen you at the moment you need most, click to record a video, an audio or take a picture of yourself or a special person. Talk about why you should stand firm and do not go back to smoking"
                                android:layout_margin="20dp"
                                android:textSize="14sp"
                                android:gravity="center_horizontal"
                                android:textColor="@android:color/black"
                                android:alpha="0.61"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal">

                                        <RelativeLayout
                                            android:id="@+id/p_personal_motivation_fragment_photo_btn_lay"
                                            android:layout_width="78dp"
                                            android:layout_height="78dp"
                                            android:background="@drawable/my_trigger_ic_bg">

                                            <ImageView
                                                android:layout_width="38dp"
                                                android:layout_height="38dp"
                                                android:src="@drawable/ic_plan_photo"
                                                android:layout_centerInParent="true"/>

                                        </RelativeLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Photo"
                                            android:textColor="@android:color/black"
                                            android:textSize="12sp"
                                            android:layout_marginTop="10dp"
                                            android:id="@+id/textView2" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal">

                                        <RelativeLayout
                                            android:id="@+id/p_personal_motivation_fragment_video_btn_lay"
                                            android:layout_width="78dp"
                                            android:layout_height="78dp"
                                            android:background="@drawable/my_trigger_ic_bg">

                                            <ImageView
                                                android:layout_width="38dp"
                                                android:layout_height="20dp"
                                                android:src="@drawable/ic_plan_video"
                                                android:layout_centerInParent="true"/>

                                        </RelativeLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Video"
                                            android:textColor="@android:color/black"
                                            android:textSize="12sp"
                                            android:layout_marginTop="10dp"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal">

                                        <RelativeLayout
                                            android:id="@+id/p_personal_motivation_fragment_audio_btn_lay"
                                            android:layout_width="78dp"
                                            android:layout_height="78dp"
                                            android:background="@drawable/my_trigger_ic_bg">

                                            <ImageView
                                                android:layout_width="38dp"
                                                android:layout_height="38dp"
                                                android:src="@drawable/ic_plan_audio"
                                                android:layout_centerInParent="true"/>

                                        </RelativeLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Audio"
                                            android:textColor="@android:color/black"
                                            android:textSize="12sp"
                                            android:layout_marginTop="10dp"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <EditText
                                android:id="@+id/motivation_description_text"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/round_border_ed"
                                android:hint="Write text your motivation"
                                android:gravity="start"
                                android:textSize="15sp"
                                android:padding="10dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp">



                                <FrameLayout
                                    android:id="@+id/p_personal_motivation_fragment_back_btn_frame"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/plan_circle_btn_green"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="20dp">

                                    <android.support.v7.widget.AppCompatImageView
                                        app:srcCompat="@drawable/ic_arrow_forward_left"
                                        android:layout_gravity="center"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />
                                </FrameLayout>

                                <FrameLayout
                                    android:id="@+id/p_personal_motivation_fragment_next_btn_frame"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/plan_circle_btn_green"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="20dp">

                                    <android.support.v7.widget.AppCompatImageView
                                        app:srcCompat="@drawable/ic_arrow_forward_right"
                                        android:layout_gravity="center"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />
                                </FrameLayout>

                            </RelativeLayout>



                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:layout_width="196dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_btn_green"
                    android:layout_centerHorizontal="true"
                    android:text="PERSONAL MOTIVATION"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>