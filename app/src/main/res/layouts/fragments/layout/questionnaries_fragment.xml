<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlue">

    <android.support.v4.widget.NestedScrollView
        android:paddingBottom="40dp"
        android:layout_marginLeft="@dimen/complete_fragment_margin_right_left"
        android:layout_marginRight="@dimen/complete_fragment_margin_right_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"

                android:fillViewport="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/complete_first_title"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/complete_choice_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/complete_fragment_cell_height">

                        <ImageView
                            android:id="@+id/complete_choice_1_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/situation_cell_bg"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="@dimen/complete_fragment_cell_margin_left_right"
                            android:layout_marginRight="@dimen/complete_fragment_cell_margin_left_right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/complete_choice_1_check_box"
                                android:layout_width="@dimen/complete_fragment_cell_checkbox_size"
                                android:layout_height="@dimen/complete_fragment_cell_checkbox_size"
                                android:src="@drawable/situation_uncheck_ic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/complete_fragment_cell_checkbox_margin"
                                android:text="@string/complete_first_choice_1"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/complete_fragment_cell_text_size" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/complete_choice_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/complete_fragment_cell_height">

                        <ImageView
                            android:id="@+id/complete_choice_2_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/situation_cell_bg"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="@dimen/complete_fragment_cell_margin_left_right"
                            android:layout_marginRight="@dimen/complete_fragment_cell_margin_left_right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/complete_choice_2_check_box"
                                android:layout_width="@dimen/complete_fragment_cell_checkbox_size"
                                android:layout_height="@dimen/complete_fragment_cell_checkbox_size"
                                android:src="@drawable/situation_uncheck_ic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/complete_fragment_cell_checkbox_margin"
                                android:text="@string/complete_first_choice_2"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/complete_fragment_cell_text_size" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/complete_choice_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/complete_fragment_cell_height">

                        <ImageView
                            android:id="@+id/complete_choice_3_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/situation_cell_bg"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="@dimen/complete_fragment_cell_margin_left_right"
                            android:layout_marginRight="@dimen/complete_fragment_cell_margin_left_right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/complete_choice_3_check_box"
                                android:layout_width="@dimen/complete_fragment_cell_checkbox_size"
                                android:layout_height="@dimen/complete_fragment_cell_checkbox_size"
                                android:src="@drawable/situation_uncheck_ic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/complete_fragment_cell_checkbox_margin"
                                android:text="@string/complete_first_choice_3"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/complete_fragment_cell_text_size" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/complete_choice_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/complete_fragment_cell_height">

                        <ImageView
                            android:id="@+id/complete_choice_4_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/situation_cell_bg"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="@dimen/complete_fragment_cell_margin_left_right"
                            android:layout_marginRight="@dimen/complete_fragment_cell_margin_left_right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/complete_choice_4_check_box"
                                android:layout_width="@dimen/complete_fragment_cell_checkbox_size"
                                android:layout_height="@dimen/complete_fragment_cell_checkbox_size"
                                android:src="@drawable/situation_uncheck_ic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/complete_fragment_cell_checkbox_margin"
                                android:text="@string/complete_first_choice_4"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/complete_fragment_cell_text_size" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/complete_choice_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/complete_fragment_cell_height">

                        <ImageView
                            android:id="@+id/complete_choice_5_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/situation_cell_bg"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="@dimen/complete_fragment_cell_margin_left_right"
                            android:layout_marginRight="@dimen/complete_fragment_cell_margin_left_right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/complete_choice_5_check_box"
                                android:layout_width="@dimen/complete_fragment_cell_checkbox_size"
                                android:layout_height="@dimen/complete_fragment_cell_checkbox_size"
                                android:src="@drawable/situation_uncheck_ic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/complete_fragment_cell_checkbox_margin"
                                android:text="@string/complete_first_choice_5"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/complete_fragment_cell_text_size" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/complete_choice_6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/complete_fragment_cell_height">

                        <ImageView
                            android:id="@+id/complete_choice_6_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/situation_cell_bg"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="@dimen/complete_fragment_cell_margin_left_right"
                            android:layout_marginRight="@dimen/complete_fragment_cell_margin_left_right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/complete_choice_6_check_box"
                                android:layout_width="@dimen/complete_fragment_cell_checkbox_size"
                                android:layout_height="@dimen/complete_fragment_cell_checkbox_size"
                                android:src="@drawable/situation_uncheck_ic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/complete_fragment_cell_checkbox_margin"
                                android:text="@string/complete_first_choice_6"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/complete_fragment_cell_text_size" />

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_height"
                    android:background="@drawable/question_cell_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_title_height"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/complete_second_question_1"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/complete_second_ask_edit_first"
                                android:layout_width="@dimen/complete_fragment_cell_edit_text_width"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:layout_centerInParent="true"
                                android:background="@drawable/round_stroke_btn_grey"
                                android:gravity="center"
                                android:hint="0"
                                android:inputType="number"
                                android:maxLength="3"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textColorHint="@color/colorSplashText"
                                android:textSize="@dimen/complete_fragment_cell_edit_text_size" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_height"
                    android:layout_marginTop="@dimen/complete_fragment_cell_margin_top"
                    android:background="@drawable/question_cell_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_title_height"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/complete_second_question_2"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/complete_second_ask_edit_second"
                                android:layout_width="@dimen/complete_fragment_cell_edit_text_width"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:layout_centerInParent="true"
                                android:background="@drawable/round_stroke_btn_grey"
                                android:gravity="center"
                                android:hint="$"
                                android:inputType="numberDecimal"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textColorHint="@color/colorSplashText"
                                android:textSize="@dimen/complete_fragment_cell_edit_text_size" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_larger_height"
                    android:layout_marginTop="@dimen/complete_fragment_cell_margin_top"
                    android:background="@drawable/question_cell_larger_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_large_title_height"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/complete_second_question_3"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/complete_second_ask_edit_third"
                                android:layout_width="@dimen/complete_fragment_cell_edit_text_width"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/round_stroke_btn_grey"
                                android:gravity="center"
                                android:hint="min"
                                android:inputType="number"
                                android:maxLength="8"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textColorHint="@color/colorSplashText"
                                android:textSize="@dimen/complete_fragment_cell_edit_text_size" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_height"
                    android:layout_marginTop="@dimen/complete_fragment_cell_margin_top"
                    android:background="@drawable/question_cell_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_title_height"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/complete_third_question_1"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/complete_third_age_edit_text"
                                android:layout_width="@dimen/complete_fragment_cell_edit_text_width"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:layout_centerInParent="true"
                                android:background="@drawable/round_stroke_btn_grey"
                                android:gravity="center"
                                android:hint="years"
                                android:inputType="number"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textColorHint="@color/colorSplashText"
                                android:textSize="@dimen/complete_fragment_cell_edit_text_size" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_height"
                    android:layout_marginTop="@dimen/complete_fragment_cell_margin_top"
                    android:background="@drawable/question_cell_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_title_height"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/complete_third_question_2"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/complete_third_fragment_date_btn"
                                android:layout_width="@dimen/complete_fragment_third_date_edit_text_weight"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:layout_centerInParent="true"
                                android:background="@drawable/round_stroke_btn_grey">



                                <TextView
                                    android:layout_marginRight="15dp"
                                    android:layout_toLeftOf="@+id/complete_third_fragment_icon_calendar"
                                    android:id="@+id/complete_third_date_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryWhite"
                                    android:textSize="@dimen/complete_fragment_cell_edit_text_size" />

                                <ImageView
                                    android:id="@+id/complete_third_fragment_icon_calendar"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="17dp"
                                    android:layout_height="17dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/calendar_ic_white" />


                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_height"
                    android:layout_marginTop="@dimen/complete_fragment_cell_margin_top"
                    android:background="@drawable/question_cell_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_title_height"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/complete_third_question_3"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/complete_third_gender_btn"
                                android:layout_width="@dimen/complete_fragment_cell_edit_text_width"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:layout_centerInParent="true"
                                android:background="@drawable/round_stroke_btn_grey">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:id="@+id/complete_third_sex_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Male"
                                        android:textColor="@color/colorPrimaryWhite"
                                        android:textSize="@dimen/complete_fragment_cell_edit_text_size" />

                                    <ImageView
                                        android:layout_width="8dp"
                                        android:layout_height="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="15dp"
                                        android:src="@drawable/arrow_above_and_below" />

                                </LinearLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/questionaries_fragment_save"
                        android:layout_width="180dp"
                        android:layout_height="45dp"
                        android:background="@drawable/round_stroke_btn_white"
                        android:gravity="center"
                        android:text="SAVE"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <FrameLayout
        android:visibility="gone"
        android:id="@+id/complete_register_third_progress_frame"
        android:background="@color/colorBackgroundTransparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.clearsoft.welivre.ui.wigets.WhiteProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </FrameLayout>

</RelativeLayout>