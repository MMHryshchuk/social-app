<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlue">

    <android.support.v4.widget.NestedScrollView
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundBlue"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">


            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp">

                <com.clearsoft.welivre.ui.wigets.RoundedImageView
                    android:background="@drawable/default_contact"
                    android:id="@+id/settings_profile_fragment_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </FrameLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/settings_profile_fragment_name_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhiteTrans"
                    android:drawableLeft="@drawable/ic_user_white"
                    android:drawablePadding="20dp"
                    android:hint="Name"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textColorHint="@color/colorWhiteTrans" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/settings_profile_fragment_email_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhiteTrans"
                    android:drawableLeft="@drawable/ic_message"
                    android:drawablePadding="20dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textColorHint="@color/colorWhiteTrans" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/settings_profile_fragment_password_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhiteTrans"
                    android:drawableLeft="@drawable/ic_password_lock_wite"
                    android:drawablePadding="20dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textColorHint="@color/colorWhiteTrans" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/settings_profile_fragment_about_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhiteTrans"
                    android:drawablePadding="20dp"
                    android:hint="About"
                    android:inputType="textAutoComplete"
                    android:paddingLeft="64dp"
                    android:textColor="@color/colorPrimaryWhite"

                    android:textColorHint="@color/colorWhiteTrans" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginBottom="20dp"
                android:id="@+id/settings_profile_fragment_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_stroke_btn_white"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:paddingTop="15dp"
                android:text="SAVE"
                android:textColor="@color/colorPrimaryWhite" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/settings_profile_fragment_progress_frame"
        android:background="@color/colorBackgroundTransparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.clearsoft.welivre.ui.wigets.WhiteProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</RelativeLayout>