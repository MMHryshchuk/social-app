<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/complete_second_fragment_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/complete_fragment_cell_margin_left_right"
        android:layout_marginRight="@dimen/complete_fragment_cell_margin_left_right"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center_horizontal"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <TextView
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/complete_title"
                android:textColor="@android:color/white"
                android:textSize="17.5sp" />

            <include layout="@layout/complete_second_view"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_height"
                    android:background="@drawable/question_cell_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_title_height"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/complete_second_question_1"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/complete_second_ask_edit_first"
                                android:layout_width="@dimen/complete_fragment_cell_edit_text_width"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:maxLines="1"
                                android:maxLength="3"
                                android:layout_centerInParent="true"
                                android:background="@drawable/round_stroke_btn_grey"
                                android:gravity="center"
                                android:inputType="number"
                                android:hint="0"
                                android:textColorHint="@color/colorSplashText"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="@dimen/complete_fragment_cell_edit_text_size" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_height"
                    android:layout_marginTop="@dimen/complete_fragment_cell_margin_top"
                    android:background="@drawable/question_cell_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_title_height"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="@string/complete_second_question_2"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/complete_second_ask_edit_second"
                                android:layout_width="@dimen/complete_fragment_cell_edit_text_width"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:maxLines="1"
                                android:maxLength="6"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:hint="$"
                                android:inputType="numberDecimal"
                                android:textColorHint="@color/colorSplashText"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="@dimen/complete_fragment_cell_edit_text_size"
                                android:background="@drawable/round_stroke_btn_grey"/>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/complete_fragment_second_cell_larger_height"
                    android:layout_marginTop="@dimen/complete_fragment_cell_margin_top"
                    android:background="@drawable/question_cell_larger_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/complete_fragment_cell_large_title_height"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/complete_second_question_3"
                            android:textSize="@dimen/complete_fragment_cell_title_size"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/complete_second_ask_edit_third"
                                android:layout_width="@dimen/complete_fragment_cell_edit_text_width"
                                android:layout_height="@dimen/complete_fragment_cell_edit_text_height"
                                android:gravity="center"
                                android:hint="min"
                                android:maxLines="1"
                                android:maxLength="8"
                                android:inputType="number"
                                android:textColorHint="@color/colorSplashText"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="@dimen/complete_fragment_cell_edit_text_size"
                                android:background="@drawable/round_stroke_btn_grey"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/complete_second_fragment_next"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:background="@drawable/round_stroke_btn_white"
                    android:gravity="center"
                    android:text="@string/complete_next"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>