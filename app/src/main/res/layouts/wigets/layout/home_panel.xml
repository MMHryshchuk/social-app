<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_bar_view"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="@dimen/bottom_panel_height"
    android:layout_alignParentBottom="true"
    android:background="@color/colorPrimaryWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/panel_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_panel_home"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_home_tabic_incative" />

                <TextView
                    android:id="@+id/feed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/bottom_panel_font_size" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_training"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_panel_training"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_training_tabic_inactive" />

                <TextView
                    android:id="@+id/training_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Training"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/bottom_panel_font_size" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_sos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_panel_sos"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_sos_tabic_inactive" />

                <TextView
                    android:id="@+id/sos_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="SOS"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/bottom_panel_font_size" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_messenger"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/bage_ic"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/noti_barge_ic" />

                <ImageView
                    android:id="@+id/home_panel_messenger"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/ic_message_tabic_inactive" />

                <TextView
                    android:id="@+id/msg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1dp"
                    android:text="Messenger"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/bottom_panel_font_size" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/panel_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_panel_more"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_more_tabic_inactive" />

                <TextView
                    android:id="@+id/more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="More"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/bottom_panel_font_size" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.25"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>
