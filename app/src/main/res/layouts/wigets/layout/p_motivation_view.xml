    <View
        android:layout_width="10dp"
        android:layout_height="2dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:alpha="0.3"
        android:background="@color/colorPrimaryBlack" />


    <View
        android:layout_width="10dp"
        android:layout_height="2dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:alpha="0.3"
        android:background="@color/colorPrimaryBlack" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        app:srcCompat="@drawable/black_done_3" />

    <View
        android:layout_width="10dp"
        android:layout_height="2dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:alpha="0.3"
        android:background="@color/colorPrimaryBlack" />

    <View
        android:layout_width="10dp"
        android:layout_height="2dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:alpha="0.3"
        android:background="@color/colorPrimaryBlack" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        app:srcCompat="@drawable/black_done_4" />

    <View
        android:layout_width="10dp"
        android:layout_height="2dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
