<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_my_training"/>

    <FrameLayout
        android:background="@color/colorBackgroundBlue"
        android:layout_marginBottom="@dimen/activity_home_tab_panel_height"
        android:layout_below="@+id/toolbar_my_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_my_training_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </FrameLayout>

    <include layout="@layout/home_panel"/>


</RelativeLayout>