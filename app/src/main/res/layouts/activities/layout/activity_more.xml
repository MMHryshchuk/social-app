                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_height="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_avatar_margin"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/more_settings"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_title_margin"
                            android:layout_gravity="center_vertical"
                            android:text="Settings"
                            android:textSize="@dimen/activity_more_title_font_size"
                            android:textColor="@android:color/black"
                            android:id="@+id/textView" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/activity_more_cell_view_arrow_width"
                        android:layout_height="@dimen/activity_more_cell_view_arrow_height"
                        android:src="@drawable/arrow_right_ic_gray"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_more_cell_view_arrow_margin"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/more_invite_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_more_cell_height"
                android:layout_marginBottom="@dimen/activity_more_cell_view_margin_bottom"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_height="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_avatar_margin"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/more_invite"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_title_margin"
                            android:layout_gravity="center_vertical"
                            android:text="Invite friends"
                            android:textSize="@dimen/activity_more_title_font_size"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/activity_more_cell_view_arrow_width"
                        android:layout_height="@dimen/activity_more_cell_view_arrow_height"
                        android:src="@drawable/arrow_right_ic_gray"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_more_cell_view_arrow_margin"
                        android:visibility="invisible"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/more_about_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_more_cell_height"
                android:layout_marginBottom="@dimen/activity_more_cell_view_margin_bottom"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/more_about"
                            android:layout_width="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_height="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_avatar_margin"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_title_margin"
                            android:layout_gravity="center_vertical"
                            android:text="About"
                            android:textSize="@dimen/activity_more_title_font_size"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/activity_more_cell_view_arrow_width"
                        android:layout_height="@dimen/activity_more_cell_view_arrow_height"
                        android:src="@drawable/arrow_right_ic_gray"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_more_cell_view_arrow_margin"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/more_logout_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_more_cell_height"
                android:layout_marginBottom="@dimen/activity_more_cell_view_margin_bottom"
                app:cardCornerRadius="6dp"
