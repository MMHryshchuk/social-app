<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar_more"/>

    <ScrollView
        android:id="@+id/more_main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_more_scroll_marginTop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/bottom_panel_height"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_gravity="center_horizontal"
            android:animateLayoutChanges="true">

            <android.support.v7.widget.CardView
                android:id="@+id/more_noti_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_more_cell_height"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/activity_more_cell_view_margin_bottom"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_height="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_avatar_margin"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/more_notification"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_title_margin"
                            android:layout_gravity="center_vertical"
                            android:text="Notifications"
                            android:textSize="@dimen/activity_more_title_font_size"
                            android:textColor="@android:color/black"/>

                        <ImageView
                            android:id="@+id/more_noti_bage_image"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:src="@drawable/noti_barge_ic"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/activity_more_cell_view_arrow_width"
                        android:layout_height="@dimen/activity_more_cell_view_arrow_height"
                        android:src="@drawable/arrow_right_ic_gray"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_more_cell_view_arrow_margin"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/more_my_plan_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_more_cell_height"
                android:layout_marginBottom="@dimen/activity_more_cell_view_margin_bottom"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_height="@dimen/activity_more_cell_view_avatar_size"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_avatar_margin"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/more_plan"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_more_cell_view_title_margin"
                            android:layout_gravity="center_vertical"
                            android:text="My plan"
                            android:textSize="@dimen/activity_more_title_font_size"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/activity_more_cell_view_arrow_width"
                        android:layout_height="@dimen/activity_more_cell_view_arrow_height"
                        android:src="@drawable/arrow_right_ic_gray"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_more_cell_view_arrow_margin"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/more_health_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_more_cell_height"
                android:layout_marginBottom="@dimen/activity_more_cell_view_margin_bottom"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

