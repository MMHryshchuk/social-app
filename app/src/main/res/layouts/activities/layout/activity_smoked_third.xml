<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <FrameLayout
        android:id="@+id/activity_more_second_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_background_white">

            <TextView
                android:id="@+id/activity_more_third_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="30dp"
                android:text="@string/activity_more_second_txt"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_more_third_txt2"
                android:layout_below="@+id/activity_more_third_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/activity_more_second_second_txt"
                android:textSize="16sp" />

            <TextView
                android:paddingBottom="12dp"
                android:gravity="center"
                android:text="@string/activity_more_third_txt"
                android:layout_below="@+id/activity_more_third_txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_bg_green"
            android:gravity="center"
            android:text="It was just a Slip!"
            android:textColor="@color/colorPrimaryWhite"
            android:textStyle="bold" />

    </FrameLayout>




    <TextView
        android:id="@+id/activity_smoked_third_plan_btn"
        android:textColor="@color/colorPrimaryWhite"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        android:text="@string/activity_more_second_restart_plan_btn"
        android:background="@drawable/round_more_btn_trans"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/activity_more_second_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>