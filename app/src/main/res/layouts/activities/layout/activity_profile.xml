<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <LinearLayout
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/toolbar_user" />

                <RelativeLayout
                    android:id="@+id/profile_user_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/feed_header_bg">

                    <LinearLayout
                        android:id="@+id/user_profile_first_block"
                        android:layout_width="match_parent"
                        android:layout_height="77dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <TextView
                                android:id="@+id/user_profile_send_message_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:background="@drawable/round_stroke_btn_white"
                                android:paddingBottom="8dp"
                                android:paddingLeft="@dimen/activity_profile_btn_padding_left_right"
                                android:paddingRight="@dimen/activity_profile_btn_padding_left_right"
                                android:paddingTop="8dp"
                                android:text="SEND MESSAGE"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="10sp" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <com.clearsoft.welivre.ui.wigets.RoundedImageView
                                android:id="@+id/user_profile_avatar_image"
                                android:layout_width="67dp"
                                android:layout_height="67dp"
                                android:layout_gravity="center"
                                android:background="@drawable/default_contact" />

                        </FrameLayout>


                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <TextView
                                android:id="@+id/user_profile_follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:background="@drawable/round_stroke_btn_white"
                                android:paddingBottom="8dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="8dp"
                                android:text="FOLLOW"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="10sp" />

                        </FrameLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_profile_second_block"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_below="@+id/user_profile_first_block"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp"
                        android:paddingTop="2dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/activity_profile_avoid_siggarete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="0"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:alpha="0.6"
                                android:text="@string/user_avoided_cigarettes"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="3dp"
                                android:alpha="0.5"
                                android:background="@color/colorPrimaryWhite" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/activity_profile_saving"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="0"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:alpha="0.6"
                                android:text="@string/user_saving"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="3dp"
                                android:alpha="0.3"
                                android:background="@color/colorPrimaryWhite" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/activity_profile_no_smokking_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="0"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:alpha="0.6"
                                android:text="@string/user_no_smoke"
                                android:textColor="@color/colorPrimaryWhite"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/user_profile_bottom_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_profile_second_block"
                        android:background="@color/colorPrimaryWhite"
                        android:orientation="horizontal"
                        android:weightSum="4">


                        <LinearLayout
                            android:id="@+id/activity_profile_posts_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_profile_posts_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_profile_posts_count_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Posts"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_profile_followers_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_profile_followers_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_profile_followers_count_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Followers"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_profile_following_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_profile_following_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/activity_profile_following_count_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Following"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_profile_about_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/activity_profile_about_img"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                app:srcCompat="@drawable/ic_user_grey" />

                            <TextView
                                android:id="@+id/activity_profile_about_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="About"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_below="@id/user_profile_bottom_block"
                        android:background="@color/colorDivider">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/share_line_header_bottom" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/post_indicator"
                                    android:layout_width="27dp"
                                    android:layout_height="13dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="2dp"
                                    android:src="@drawable/top_indicator_ic" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/followers_indicator"
                                    android:layout_width="27dp"
                                    android:layout_height="13dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="2dp"
                                    android:src="@drawable/top_indicator_ic"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/following_indicator"
                                    android:layout_width="27dp"
                                    android:layout_height="13dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="2dp"
                                    android:src="@drawable/top_indicator_ic"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/about_indicator"
                                    android:layout_width="27dp"
                                    android:layout_height="13dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="2dp"
                                    android:src="@drawable/top_indicator_ic"
                                    android:visibility="gone" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:layout_marginBottom="@dimen/activity_home_tab_panel_height"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <include layout="@layout/home_panel" />
</android.support.design.widget.CoordinatorLayout>